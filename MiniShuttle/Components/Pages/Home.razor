@page "/"

<PageTitle>Home</PageTitle>
<main>
    <!-- Hero Section -->
    <section class="hero-section bg-primary text-white py-5">
        <div class="container">
            <div class="row align-items-center min-vh-75">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold mb-4">Reliable Airport Transportation</h1>
                    <p class="lead mb-4">Safe, comfortable, and affordable rides to and from the airport</p>
                    <div class="d-flex flex-wrap gap-3">
                        <a href="request-ride.html" class="btn btn-light btn-lg">
                            <i class="fas fa-car me-2"></i>
                            Request a Ride
                        </a>
                        <a href="driver-registration.html" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-user-plus me-2"></i>
                            Become a Driver
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 text-center">
                    <i class="fas fa-taxi hero-icon"></i>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-5">
        <div class="container">
            <h2 class="text-center mb-5 display-5">Why Choose AirportGo?</h2>
            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 border-0 shadow-sm text-center">
                        <div class="card-body p-4">
                            <div class="feature-icon bg-primary text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center">
                                <i class="fas fa-clock fa-2x"></i>
                            </div>
                            <h5 class="card-title">24/7 Service</h5>
                            <p class="card-text">Available round the clock for all your airport transportation needs</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 border-0 shadow-sm text-center">
                        <div class="card-body p-4">
                            <div class="feature-icon bg-primary text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center">
                                <i class="fas fa-shield-alt fa-2x"></i>
                            </div>
                            <h5 class="card-title">Safe & Secure</h5>
                            <p class="card-text">All drivers are verified and vehicles are regularly inspected</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 border-0 shadow-sm text-center">
                        <div class="card-body p-4">
                            <div class="feature-icon bg-primary text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center">
                                <i class="fas fa-dollar-sign fa-2x"></i>
                            </div>
                            <h5 class="card-title">Affordable Rates</h5>
                            <p class="card-text">Competitive pricing with no hidden fees or surge charges</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-success text-white py-5">
        <div class="container text-center">
            <h2 class="display-5 mb-3">Ready to Get Started?</h2>
            <p class="lead mb-4">Join thousands of satisfied customers and drivers on our platform</p>
            <div class="d-flex justify-content-center flex-wrap gap-3">
                <a href="request-ride.html" class="btn btn-light btn-lg">Book Your Ride</a>
                <a href="driver-registration.html" class="btn btn-outline-light btn-lg">Join as Driver</a>
            </div>
        </div>
    </section>
</main>
